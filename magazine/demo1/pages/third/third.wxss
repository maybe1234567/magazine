/* pages/third/third.wxss */
@import '/pages/common.wxss';
.content {
  background-color: #ddd;
}

.wrapper {
  padding: 0 15rpx;
}

.article {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date {
  position: relative;
  font-size: 50rpx;
  letter-spacing: 10rpx;
  margin: 10rpx 0;
  color: #000;
}

.date::after {
  position: absolute;
  left: 50%;
  margin: 10rpx 0;
  transform: translateX(-50%);
  content: '';
  display: block;
  width: 133rpx;
  height: 2px;
  background-color: #ccc;
}

.review {
  margin: 20rpx 0;
  font-size: 30rpx;
}

.article image {
  width: 90vw;
}

.list {
  margin: 40rpx 0;
}

.list text {
  display: inline-block;
  padding: 15rpx;
  margin: 15rpx;
  font-size: 30rpx;
  border: 1px solid #000;
}

.list text.active {
  background-color: #000;
  color: #fff;
}

