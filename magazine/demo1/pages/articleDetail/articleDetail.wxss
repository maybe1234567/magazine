/* pages/articleDetail/articleDetail.wxss */


.wrapper .header {
  text-align: center;
  display: block;
  font-size: 40rpx;
  font-weight: bolder;
  margin-top: 20rpx;
}

.wrapper .date-author text {
  padding: 0 15rpx;
  font-size: 30rpx;
  color: #ccc;
}

.wrapper .content {
  text-indent: 60rpx;
  letter-spacing: 3rpx;
    padding: 0 25rpx;
  line-height: 50rpx;
  display: inline-block;
  font-size: 30rpx;
}
.wrapper .read text{
  font-size: 30rpx;
  color: #bbb;
 padding: 20rpx;
}
.wrapper swiper{
  width: 80vw;
 margin: 30rpx auto;
}
.wrapper swiper image{
  width: 100%;
  height: 100%;
}
.wrapper .myVideo{
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}
.wrapper .myVideo video{
  width: 80vw;
}

.wrapper .audio{
  width: 90vw;
  height: 200rpx;
  position: relative;
  left: 40rpx;
  border: 1px solid #eee;
  margin: 10rpx 0;
  padding: 10rpx;
  display: flex;
}
.wrapper .audio .audio-controler{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  width: 20%;
  background-color: #ccc;
}
.wrapper .audio image{
  position: relative;
  left: 40%;
  width: 30%;
  height: 30%;
}
.wrapper .audio .audio-info{
  position: relative;
  height: 100%;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: left;
}
.wrapper .audio .audio-title{
  margin: 15rpx 0;
  font-size: 30rpx;
}

.wrapper .audio .audio-from {
  color: #ccc;
  margin: 3rpx 0;
  font-size: 30rpx;
}
.wrapper .audio .audio-progress{
  width: 100%;
  position: absolute;
  bottom: 30%;
}
.wrapper .audio .audio-time{
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 30rpx;
  position: absolute;
  bottom: 0;
}

