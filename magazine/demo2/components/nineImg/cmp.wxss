/* components/nieImg/cmp.wxss */

.wrapper{
  width: 90vw;
  margin: 0 auto;
}

.wrapper .imgBox{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 675rpx;
  height: 670rpx;
  /* overflow: hidden; */
  position: relative;
}
.wrapper .imgBox image{
  width: 31%;
  height: 31%;
}
.wrapper .imgBox .imgNum{
  position: absolute;
  right: 80rpx;
  bottom: 80rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
}
.wrapper .mainText{
  padding: 0 30rpx;
  font-size: 40rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}