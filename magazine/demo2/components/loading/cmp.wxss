.wrapper {
  position: relative;
  width: 62rpx;
  height: 62rpx;
}

.wrapper .circle {
  position: absolute;
  top: 0;
  left: 330rpx;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #333;
  opacity: 0.6;
  animation: run 2s infinite;
}

.wrapper .circle1 {
  animation-delay: 1s;
}

@keyframes run {
  0% {
    transform: scale(0);
  }

  50% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}
