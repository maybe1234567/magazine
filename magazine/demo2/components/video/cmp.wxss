
.wrapper{
  width: 700rpx;
  margin: 0 auto;
}
.wrapper .video-box .video{
  width: 700rpx;
  height: 400rpx;
}
.wrapper .video-box .cover{
  position: relative;
  width: 100%;
  height: 100%;
}
.wrapper .coverImg{
  width: 700rpx;
  height: 400rpx;
}
.wrapper .video-box .cover .video-cover {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
 
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
}
.wrapper .video-box .cover .video-cover .controller{
  position: relative;
  top: 10%;
  left: 30%;
  width: 50rpx;
  height: 50rpx;
  
}
.wrapper .duration{
  position: relative;
  top: 35%;
  right: 15%;
  color: #fff;
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
}
.mainTitle{
  font-size: 40rpx;
  padding: 20rpx;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height:1334rpx;
  background-color: rgba(0, 0, 0, 0.6);
}